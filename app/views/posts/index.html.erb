
<% if session[:id] %>
  <%= link_to "create post", new_post_path %>
  <%= link_to "logout", session_path(session[:id]), method: :delete%>
<% else %>
  <%= link_to "signup", new_user_path %>
  <%= link_to "signin", new_session_path %>
<% end %>




<table>
  <% @posts.each_with_index do |post, index| %>
    <tr>
      <td><%= index + 1 %>. </td>
      <td>
      <% if post.url.length > 0 %>
        <%= link_to post.title, "http://#{post.url}" %>
      <% else %>
        <%= link_to post.title, post %>
      <% end %>
      (<%= post.url %>)</td>
    </tr>
    <tr>
      <td># points</td>
      <td>by <%= post.user.username %>
             <%= (post.created_at - Time.now) %> |
      </td>
      <td><%= link_to "#{post.comments.count} comments", post_comments_path(post) %></td>
  <% end %>
</table>
